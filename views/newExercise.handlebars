<div class="container">

	<div class="row">
    <div class="col-1"></div>
		<div class="col-10">
      <h4 class="m-4 text-center">Create a new exercise</h4>

      <form id="create-exercise-form" data-workout-id="{{workout._id}}">

        <div class="form-group">
          <input type="text" class="form-control" id="exercise-name-input" name="name" placeholder="Name">
        </div>

        <div class="form-group">
          <input type="text" class="form-control" id="exercise-type-input" name="type" placeholder="Type">
        </div>

        <div class="form-row">
          <div class="form-group col-sm-4">
            <input type="text" class="form-control" id="exercise-weight-input" name="weight" placeholder="Weight">
          </div>
          <div class="form-group col-sm-4">
            <input type="number" class="form-control" id="exercise-reps-input" name="reps" placeholder="# Reps">
          </div>
          <div class="form-group col-sm-4">
            <input type="number" class="form-control" id="exercise-sets-input" name="sets" placeholder="# Sets">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <input type="text" class="form-control" id="exercise-duration-input" name="duration" placeholder="Duration">
          </div>
          <div class="form-group col-md-6">
            <input type="text" class="form-control" id="exercise-distance-input" name="distance" placeholder="Distance">
          </div>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </div>

      </form>
		</div>
    <div class="col-1"></div>
	</div>

</div>
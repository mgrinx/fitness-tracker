<div class="container">

  <div class="row">
    <div class="col-12 text-center">
      <h4 class="mt-4 mb-2">{{workout.name}} <span class="text-muted font-weight-light">({{workout.datef}})</span></h4>
      <a role="button" href="/" class="btn btn-lg btn-secondary m-2"><i class="fas fa-arrow-circle-left"></i> Go back</a>
      <a role="button" href="/{{workout._id}}/new" class="btn btn-lg btn-primary m-2">Add a new exercise <i class="fas fa-plus-circle"></i></a>
      <div class="d-flex flex-wrap justify-content-center mt-2">
        {{#unless workout.exercises}}<span class="text-muted font-italic my-2">No exercises yet</span>{{/unless}}
        {{#each workout.exercises}}{{>exercise-card}}{{/each}}
      </div>
    </div>
  </div>

</div>

<!-- Modals -->
<div class="modal fade" id="confirm-delete-exercise-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm deletion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <span id="delete-exercise-message" class="text-break"></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button id="confirm-delete-exercise-button" type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>